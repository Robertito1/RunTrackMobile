rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to validate run data fields
    function isValidRunData() {
      let requiredFields = ['uid', 'startTime', 'isActive'];
      let allowedFields = ['uid', 'startTime', 'endTime', 'durationSeconds', 'isActive'];
      
      return request.resource.data.keys().hasAll(requiredFields) &&
             request.resource.data.keys().hasOnly(allowedFields) &&
             request.resource.data.uid is string &&
             request.resource.data.startTime is timestamp &&
             request.resource.data.isActive is bool &&
             (request.resource.data.endTime == null || request.resource.data.endTime is timestamp) &&
             (request.resource.data.durationSeconds == null || request.resource.data.durationSeconds is int);
    }
    
    // Rules for 'runs' collection
    match /runs/{runId} {
      // Allow authenticated users to read their own runs
      allow read: if isAuthenticated() && 
                     resource.data.uid == request.auth.uid;
      
      // Allow authenticated users to create runs with valid data
      // User can only create runs for themselves
      allow create: if isAuthenticated() && 
                       request.resource.data.uid == request.auth.uid &&
                       isValidRunData();
      
      // Allow users to update only their own runs
      // Cannot change the uid field
      allow update: if isAuthenticated() && 
                       resource.data.uid == request.auth.uid &&
                       request.resource.data.uid == resource.data.uid &&
                       isValidRunData();
      
      // Allow users to delete only their own runs
      allow delete: if isAuthenticated() && 
                       resource.data.uid == request.auth.uid;
    }
    
    // Rules for 'users' collection (for future user profile data)
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);
      
      // Users can create their own profile
      allow create: if isOwner(userId);
      
      // Users can update their own profile
      allow update: if isOwner(userId);
      
      // Users can delete their own profile
      allow delete: if isOwner(userId);
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
